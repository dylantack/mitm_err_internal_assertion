{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["src"]
}
